<schema targetNamespace="http://ode.apache.org/bpel"
	elementFormDefault="qualified" xmlns="http://www.w3.org/2001/XMLSchema"
	xmlns:exec="http://ode.apache.org/executable" xmlns:tns="http://ode.apache.org/bpel">

	<import namespace="http://ode.apache.org/executable" />

	<complexType name="processType">
		<complexContent>
			<extension base="exec:instructionType">
				<attribute name="name" type="string" use="required" />
				<attribute name="queryLanguage" type="string" use="optional" />
				<attribute name="expressionLanguage" type="string" use="optional" />
			</extension>
		</complexContent>
	</complexType>
	
	<element name="process" type="tns:processType" />

</schema>