<schema targetNamespace="http://ode.apache.org/program" elementFormDefault="qualified" xmlns="http://www.w3.org/2001/XMLSchema" xmlns:tns="http://ode.apache.org/program">

	<!-- This schema contains all the runtime installation/environment/instance specific configurations needed to execute an executable.
	For example, on a CDI architecture it would contain JAXWS specific deployment information such as web context path and endpoint address. for an SCA
	architecture it may contain the excerpts from the composite so that the program can route messages appropriately. 
	
	Additionally BAM activities such as reporting, auditing can be mapped to the instruction level. Debugging information would be contained here as well.
	Note it is important that any operation performed at the program level not change the behavior of the executable in any way. Executables are to be self
	contained and exhibit fully deterministic behavior. For a program to interfere with an executables operation would break the contract. Debugging could be 
	the one exception where someone is purposefully updating state. 
	 -->

	<complexType name="programConfigurationType">
		<sequence>
			<element name="executables" type="tns:junctionsType" minOccurs="0" maxOccurs="unbounded" />
		</sequence>
		<attribute name="name" type="QName" use="required" />
		<attribute name="architecture" type="QName" use="required" />
	</complexType>
	
	<simpleType name="evtSetIDType">
		<restriction base="ID">
			<pattern value="e\d+" />
		</restriction>
	</simpleType>
	
	<complexType name="programSetType">
		<attribute name="name" type="QName" use="required" />
		<attribute name="eventSetId" type="tns:evtSetIDType" use="optional" />
	</complexType>


	<complexType name="programSetsType">
		<sequence>
			<element name="program-set" type="tns:programSetType" minOccurs="1" maxOccurs="unbounded" />
		</sequence>
	</complexType>
	
	
	<simpleType name="excAddressType">
		<restriction base="ID">
			<pattern value="e\d+" />
		</restriction>
	</simpleType>

	<simpleType name="excAddressRefType">
		<restriction base="IDREF">
			<pattern value="e\d+" />
		</restriction>
	</simpleType>
	

	<complexType name="executablesType">
		<sequence>
			<element name="executable" type="tns:executableType" minOccurs="0" maxOccurs="unbounded" />
		</sequence>
	</complexType>

	<complexType name="executableType">
		<sequence>
			<element name="exchanges" type="tns:junctionsType" minOccurs="0" maxOccurs="unbounded" />
			<element name="insrumentations" type="tns:insrumentationsType" minOccurs="0" maxOccurs="unbounded" />
		</sequence>
		<attribute name="executable" type="tns:excAddressType" use="required" />
		<attribute name="qname" type="QName" use="required" />
		<attribute name="version" type="string" use="required" />
		<attribute name="checksum" type="string" use="required" />
	</complexType>


	<complexType name="junctionsType">
		<sequence>
			<element name="junction" type="tns:junctionType" minOccurs="0" maxOccurs="unbounded" />
		</sequence>
	</complexType>
	
	<simpleType name="jntAddressType">
		<restriction base="ID">
			<pattern value="j\d+" />
		</restriction>
	</simpleType>

	<simpleType name="jntAddressRefType">
		<restriction base="IDREF">
			<pattern value="j\d+" />
		</restriction>
	</simpleType>

	<complexType name="junctionType" abstract="true">
	    <attribute name="jnt" type="tns:jntAddressType" use="required" />	
	</complexType>

	<element name="junction" type="tns:junctionType" abstract="true" />

	<complexType name="insrumentationsType">
		<sequence>
			<element name="insrumentationType" type="tns:insrumentationType" minOccurs="0" maxOccurs="unbounded" />
		</sequence>
	</complexType>

		
	<!-- 
	<complexType name="insrumentationType" abstract="true">
		<attribute name="id" type="ID" use="required" />
		<attribute name="scope" type="tns:insrumentationScope" use="optional" />
		<attribute name="target" type="string" use="optional" />
	</complexType>

	<simpleType name="insrumentationScope">
		<restriction base="string">
			<enumeration value="PROGRAM" />
			<enumeration value="PROCESS" />
			<enumeration value="THREAD" />
			<enumeration value="EXECUTABLE" />
			<enumeration value="BLOCK" />
			<enumeration value="INSTRUCTION" />
			<enumeration value="EXCHANGE" />
		</restriction>
	</simpleType>
-->

	<complexType name="insrumentationType" abstract="true">
		<attribute name="id" type="ID" use="required" />
	</complexType>

	<complexType name="programInsrumentationType" abstract="true">
		<complexContent>
			<extension base="tns:insrumentationType" />
		</complexContent>
	</complexType>
	
	<complexType name="processInsrumentationType" abstract="true">
		<complexContent>
			<extension base="tns:insrumentationType">
				<attribute name="processId" type="string" use="required" />
			</extension>
		</complexContent>
	</complexType>
	
	<complexType name="threadInsrumentationType" abstract="true">
		<complexContent>
			<extension base="tns:processInsrumentationType">
				<attribute name="threadId" type="string" use="required" />
			</extension>
		</complexContent>
	</complexType>

	<complexType name="executableInsrumentationType" abstract="true">
		<complexContent>
			<extension base="tns:insrumentationType">
				<attribute name="executableId" type="string" use="required" />
			</extension>
		</complexContent>
	</complexType>
	
	<complexType name="blockInsrumentationType" abstract="true">
		<complexContent>
			<extension base="tns:executableInsrumentationType">
				<attribute name="blockId" type="string" use="required" />
			</extension>
		</complexContent>
	</complexType>
	
	<simpleType name="sequence">
		<restriction base="string">
			<enumeration value="BEFORE" />
			<enumeration value="AFTER" />
		</restriction>
	</simpleType>
	
	<complexType name="instructionInsrumentationType" abstract="true">
		<complexContent>
			<extension base="tns:blockInsrumentationType">
				<attribute name="instructionId" type="string" use="required" />
				<attribute name="sequence" type="tns:sequence" use="optional" default="AFTER" />
			</extension>
		</complexContent>
	</complexType>
	
	<complexType name="exchangeInsrumentationType" abstract="true">
		<complexContent>
			<extension base="tns:insrumentationType">
				<attribute name="exchangeId" type="string" use="required" />
			</extension>
		</complexContent>
	</complexType>

	<element name="debug-breakpoint">
		<complexType>
			<complexContent>
				<extension base="tns:instructionInsrumentationType"/>
			</complexContent>
		</complexType>
	</element>

	<element name="program" type="tns:programConfigurationType" />

</schema>