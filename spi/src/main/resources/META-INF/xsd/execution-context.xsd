<schema targetNamespace="http://ode.apache.org/execution-context" elementFormDefault="qualified" xmlns="http://www.w3.org/2001/XMLSchema" xmlns:tns="http://ode.apache.org/execution-context">

	<complexType name="scopeType">
		<attribute name="name" type="string" use="required" />
	</complexType>

	<complexType name="variableType">
		<attribute name="name" type="string" use="required" />
	</complexType>

	<complexType name="frameType">
		<sequence>
			<element name="variable" type="tns:variableType" minOccurs="0" maxOccurs="unbounded" />
		</sequence>
	</complexType>

	<complexType name="stackType">
		<sequence>
			<element name="frame" type="tns:frameType" minOccurs="0" maxOccurs="unbounded" />
		</sequence>
	</complexType>


	<element name="stack" type="tns:stackType" />

</schema>