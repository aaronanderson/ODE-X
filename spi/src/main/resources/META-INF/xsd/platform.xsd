<schema targetNamespace="http://ode.apache.org/platform" elementFormDefault="qualified" xmlns="http://www.w3.org/2001/XMLSchema" xmlns:tns="http://ode.apache.org/platform">

	<simpleType name="nodeState">
		<restriction base="string">
			<enumeration value="ONLINE" />
			<enumeration value="OFFLINE" />
		</restriction>
	</simpleType>


	<element name="NodeStatus">
		<complexType>
			<attribute name="clusterId" type="string" />
			<attribute name="nodeId" type="string" />
			<attribute name="state" type="tns:nodeState" />
			<attribute name="heartbeat" type="dateTime" use="required" />
		</complexType>
	</element>
		
	<simpleType name="logLevel">
		<restriction base="string">
			<enumeration value="DEBUG" />
			<enumeration value="INFO" />
			<enumeration value="WARNING" />
			<enumeration value="ERROR" />
		</restriction>
	</simpleType>

	<complexType name="messageType">
		<simpleContent>
			<extension base="string">
				<attribute name="timestamp" type="dateTime" use="required" />
				<attribute name="level" type="tns:logLevel" default="WARNING" />
				<attribute name="code" type="integer" use="optional" />
			</extension>
		</simpleContent>
	</complexType>

	<element name="task-message" type="tns:messageType" />

	<element name="task-messages">
		<complexType>
			<sequence>
				<element ref="tns:task-message" minOccurs="1" maxOccurs="unbounded" />
			</sequence>
		</complexType>
	</element>

	<element name="task-action-message" type="tns:messageType" />

	<element name="task-action-messages">
		<complexType>
			<sequence>
				<element ref="tns:task-action-message" minOccurs="1" maxOccurs="unbounded" />
			</sequence>
		</complexType>
	</element>


	<simpleType name="taskState">
		<restriction base="string">
			<enumeration value="SUBMIT" />
			<enumeration value="START" />
			<enumeration value="EXECUTE" />
			<enumeration value="CANCEL" />
			<enumeration value="FINISH" />
			<enumeration value="COMPLETE" />
			<enumeration value="FAIL" />
		</restriction>
	</simpleType>

	<simpleType name="taskActionState">
		<restriction base="string">
			<enumeration value="SUBMIT" />
			<enumeration value="START" />
			<enumeration value="EXECUTE" />
			<enumeration value="FINISH" />
			<enumeration value="PENDING" />
			<enumeration value="ROLLBACK" />
			<enumeration value="COMMIT" />
			<enumeration value="COMPLETE" />
			<enumeration value="SKIPPED" />
			<enumeration value="FAILED" />
		</restriction>
	</simpleType>

	<simpleType name="exchangeType">
		<restriction base="string">
			<enumeration value="INPUT" />
			<enumeration value="OUTPUT" />
			<enumeration value="COORDINATE_INPUT" />
			<enumeration value="COORDINATE_OUTPUT" />
		</restriction>
	</simpleType>

	<complexType name="inputType" abstract="true" />

	<element name="input" type="tns:inputType" abstract="true" />

	<complexType name="outputType" abstract="true" />

	<element name="output" type="tns:outputType" abstract="true" />

	<complexType name="coordinationInputType" abstract="true" />

	<element name="coordinationInput" type="tns:coordinationInputType" abstract="true" />

	<complexType name="coordinationOutputType" abstract="true" />

	<element name="coordinationOutput" type="tns:coordinationOutputType" abstract="true" />

	<complexType name="targetType" abstract="true" />

	<element name="target" type="tns:targetType" abstract="true" />

	<element name="target-all" substitutionGroup="tns:target">
		<complexType>
			<complexContent>
				<extension base="tns:targetType" />
			</complexContent>
		</complexType>
	</element>

	<element name="target-cluster" substitutionGroup="tns:target">
		<complexType>
			<complexContent>
				<extension base="tns:targetType">
					<attribute name="clusterId" type="string" />
				</extension>
			</complexContent>
		</complexType>
	</element>

	<element name="target-node" substitutionGroup="tns:target">
		<complexType>
			<complexContent>
				<extension base="tns:targetType">
					<attribute name="nodeId" type="string" />
				</extension>
			</complexContent>
		</complexType>
	</element>

	<element name="Task">
		<complexType>
			<sequence>
				<element name="name" type="QName" />
				<element name="nodeId" type="string" />
				<element name="component" type="QName" />
				<element name="targets">
					<complexType>
						<sequence>
							<element ref="tns:target" minOccurs="1" maxOccurs="unbounded" />
						</sequence>
					</complexType>
				</element>
				<element ref="tns:task-messages" />
				<element name="user" type="string" />
				<element name="start" type="dateTime" />
				<element name="finished" type="dateTime" />
				<element name="exchange">
					<complexType>
						<choice>
							<element ref="tns:input" />
							<element ref="tns:output" />
						</choice>
						<attribute name="type" type="tns:exchangeType" use="required" />
					</complexType>
				</element>
			</sequence>
			<attribute name="taskId" type="string" use="required" />
			<attribute name="logLevel" type="tns:logLevel" default="WARNING" />
			<attribute name="state" type="tns:taskState" use="required" />
			<attribute name="modified" type="dateTime" use="required" />
		</complexType>
	</element>

	<element name="TaskAction">
		<complexType>
			<sequence>
				<element name="name" type="QName" />
				<element name="nodeId" type="string" />
				<element name="component" type="QName" />
				<element ref="tns:task-action-messages" />
				<element name="user" type="string" />
				<element name="start" type="dateTime" />
				<element name="finished" type="dateTime" />
				<element name="exchange">
					<complexType>
						<choice>
							<element ref="tns:input" />
							<element ref="tns:output" />
							<element ref="tns:coordinationInput" />
							<element ref="tns:coordinationOutput" />
						</choice>
						<attribute name="type" type="tns:exchangeType" use="required" />
					</complexType>
				</element>
			</sequence>
			<attribute name="taskId" type="string" />
			<attribute name="actionId" type="string" use="required" />
			<attribute name="logLevel" type="tns:logLevel" default="WARNING" />
			<attribute name="state" type="tns:taskActionState" use="required" />
			<attribute name="modified" type="dateTime" />
		</complexType>
	</element>



	<element name="installProgramInput" substitutionGroup="tns:input">
		<complexType>
			<complexContent>
				<extension base="tns:inputType">
					<sequence>
						<any namespace="##any" processContents="strict" minOccurs="1" maxOccurs="1" />
					</sequence>
				</extension>
			</complexContent>
		</complexType>
	</element>

	<element name="installProgramOutput" substitutionGroup="tns:output">
		<complexType>
			<complexContent>
				<extension base="tns:outputType">
					<attribute name="programId" type="string" />
				</extension>
			</complexContent>
		</complexType>
	</element>

</schema>