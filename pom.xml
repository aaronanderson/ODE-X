<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
         http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.apache.ode</groupId>
    <artifactId>ode-pom</artifactId>
    <version>0.1-SNAPSHOT</version>
    <name>ODE</name>
    <description>ODE BPEL4People Implementation</description>
    <packaging>pom</packaging>
    <organization>
        <name>ODE</name>
        <url>http://www.ode.apache.org/</url>
    </organization>
    <modules>
	<module>api</module>
	<module>spi</module>
    <module>repo</module>
	<module>runtime</module>
	<module>bpel</module>
	<module>cli</module>
	<module>server</module>
	<module>sca</module>
	<module>distro</module>
	<module>tests</module>
	
	<!--<module>eclipse</module>-->
    </modules>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <ciManagement>
        <system>Hudson</system>
        <url>http://ode.apache.org/hudson/job/ODE/</url>
    </ciManagement>

    <distributionManagement>
        <repository>
            <id>ode</id>
            <name>ODE</name>
            <url>http://ode.apache.org/nexus/content/repositories/ode</url>
        </repository>
        <snapshotRepository>
            <id>ode-snapshot</id>
            <name>ODE</name>
            <url>http://ode.apache.org:8383/nexus/content/repositories/ode</url>
            <uniqueVersion>false</uniqueVersion>
        </snapshotRepository>
    </distributionManagement>

    <repositories>
	<repository>
               <id>download2.java.net</id>
               <name>Java.net Maven2 Repository for Metro</name>
               <url>http://download.java.net/maven/2/</url>
            </repository>

			
<!--          <repository>
            <id>ode.apache.org</id>
            <name>ODE Maven Repository</name>
            <url>http://ode.apache.org/nexus/content/groups/public/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository> -->
    </repositories>

    <pluginRepositories>
	<pluginRepository>
               <id>maven2-repository.dev.java.net</id>
               <name>Java.net Maven2 Repository for Metro</name>
               <url>http://download.java.net/maven/2/</url>
               <layout>default</layout>
            </pluginRepository>

        <!-- <pluginRepository>
            <id>ode.apache.org</id>
            <name>ODE Maven Repository</name>
            <url>http://ode.apache.org/nexus/content/groups/public/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </pluginRepository> -->
    </pluginRepositories>

    <scm>
        <connection>scm:svn:https://ode.apache.org/trunk</connection>
        <developerConnection>scm:svn:https://ode.apache.org/trunk</developerConnection>
        <url>https://ode.apache.org/trunk</url>
    </scm>
    
</project>

